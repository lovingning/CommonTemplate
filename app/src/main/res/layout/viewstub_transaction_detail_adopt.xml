<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_introduce"
        style="@style/TextViewStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewstub_transacton_detail_adopt_label_introduce"
        android:textColor="@color/white_no_selected_40"
        android:textSize="@dimen/text_size_13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/smallest_view_height_24dp"
            android:layout_height="@dimen/smallest_view_height_24dp"
            android:src="@drawable/icon_transaction_record"/>

        <TextView
            android:id="@+id/tv_head"
            style="@style/TextViewStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/view_padding_margin_4dp"
            android:textSize="@dimen/text_size_title_15sp"
            tools:text="太姥山"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:paddingBottom="@dimen/view_padding_margin_8dp"
        android:paddingTop="8dp"/>

    <com.acchain.community.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1px"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"/>

    <LinearLayout
        style="@style/TextViewStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行权开始时间："
            android:textColor="@color/white_text_alpha_80"
            android:textSize="@dimen/text_size_title_15sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/text_size_title_15sp"
            tools:text="2017-09-14 00:00:00"/>
    </LinearLayout>

</LinearLayout>