<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:button="@drawable/selector_flow_goods_radio"
        android:checked="true"
        android:id="@+id/cb_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_height_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--状态-->
    <TextView
        android:id="@+id/tv_brief"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_12dp"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:text="蛇口街道"
        android:textColor="@color/white_no_selected_40"
        android:textSize="@dimen/text_size_small_12sp"
        app:layout_constraintStart_toEndOf="@id/cb_status"
        app:layout_constraintTop_toTopOf="parent"/>

    <!---->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_padding_margin_12dp"
        android:text="蛇口街道派件已签收，签收人汪小姐"
        android:textColor="@color/white_text_alpha_20"
        android:textSize="@dimen/text_size_smallest_11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_brief"
        app:layout_constraintStart_toStartOf="@id/tv_brief"
        app:layout_constraintTop_toBottomOf="@id/tv_brief"/>

</android.support.constraint.ConstraintLayout>