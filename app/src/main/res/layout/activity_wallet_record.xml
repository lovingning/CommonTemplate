<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar"/>

    <!--head-->
    <com.acchain.community.view.LineMenuView
        android:id="@+id/lmv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/prefer_view_height_48dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        app:LineMenuView_menu_text_color="@color/white_no_selected_40"
        app:LineMenuView_menu_text_size="@dimen/text_size_13sp"
        app:LineMenuView_navigation="@drawable/icon_date_picker"
        app:LineMenuView_plugin="text"/>

    <!--流水记录-->
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"/>

    <com.acchain.community.view.RecyclerEmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>