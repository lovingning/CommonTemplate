<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    android:background="@color/white_background_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/merchant_image"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="10px"
            android:layout_marginTop="23px"
            android:scaleType="fitXY"
            android:src="@drawable/icon_cust" />

        <TextView
            android:id="@+id/merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="湛均保荐"
            android:textColor="@color/white"
            android:textSize="30px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="182px"
            android:layout_height="182px"
            android:layout_marginBottom="27px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="16px"
            android:layout_marginTop="22px"
            android:src="@drawable/selector_ic_friends" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="26px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px">

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长白野山参"
                    android:textColor="@color/blue_3f"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/goods_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/test_money"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_goods_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="@string/test_changbais"
                android:textColor="@color/white_99"
                android:textSize="28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_attrs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/test_hanliang"
                    android:textColor="@color/white_99"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*1"
                    android:textColor="@color/white_99"
                    android:textSize="24px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_26" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量" />

        <com.acchain.community.view.AmountView
            android:id="@+id/amount_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:etColor="@color/white"
            app:etSize="12px"
            app:etWidth="44dp"
            app:type="blue_small" />
    </RelativeLayout>
</LinearLayout>