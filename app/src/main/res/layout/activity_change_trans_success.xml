<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <ImageView
        android:layout_marginTop="@dimen/view_padding_margin_32dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_trans_change_success"
        android:layout_width="@dimen/view_height_80dp"
        android:layout_height="@dimen/view_height_80dp"/>

    <TextView
        android:text="@string/activity_change_trans_success_label"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_padding_margin_24dp"
        android:textSize="@dimen/text_size_title_15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--按钮-->
    <Button
        android:id="@+id/bt_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_padding_margin_42dp"
        android:background="@drawable/btn_bg"
        android:text="@string/activity_change_trans_success_button"
        android:textSize="@dimen/text_size_17sp"/>
</LinearLayout>
