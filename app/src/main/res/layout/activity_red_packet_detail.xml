<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rela_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="open_redPacket"
        android:background="@drawable/red_detail_bg"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_head_img" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/headImg"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title_15sp"
            android:text="谁的红包" />
        <TextView
            android:id="@+id/red_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:textColor="@color/white_8E"
            android:textSize="@dimen/text_size_small_12sp"
            android:text="恭喜发财 万事如意" />
        <com.acchain.community.view.DividerView
            android:id="@+id/line"
            android:layout_below="@id/red_title"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/view_padding_margin_16dp"
            android:layout_height="@dimen/divider_line_width_1px" />
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/line"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="30 ACC" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="已存入红包,可直接消费"
        android:textColor="@color/blue_text_color"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/rela_head"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:navigationIcon="@drawable/icon_back" />

        <!--添加一条分割线-->
        <com.acchain.community.view.DividerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_width_1px" />
    </LinearLayout>
    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:text="留言"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_padding_margin_24dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
</RelativeLayout>