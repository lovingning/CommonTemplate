<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <!--邮箱-->
    <EditText
        android:id="@+id/et_account"
        style="@style/TextViewStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:hint="@string/activity_register_hint_account"
        android:textColorHint="@color/white_text_alpha_20"
        android:textSize="14sp"/>

    <com.acchain.community.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1px"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"/>

    <!--图形验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/view_padding_margin_16dp">

        <EditText
            android:id="@+id/tv_picture_code"
            style="@style/TextViewStandard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/activity_register_hint_picture_code"
            android:inputType="text"
            android:maxLength="4"
            android:textColorHint="@color/white_text_alpha_20"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_picture_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_picture_random"
            android:padding="@dimen/view_padding_margin_8dp"/>
    </LinearLayout>

    <com.acchain.community.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1px"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"/>

    <!--手机验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_randomCode"
            style="@style/TextViewStandard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/activity_register_hint_random_code"
            android:inputType="number"
            android:paddingEnd="@dimen/view_padding_margin_16dp"
            android:paddingStart="@dimen/view_padding_margin_16dp"
            android:singleLine="true"
            android:textColorHint="@color/white_text_alpha_20"
            android:textSize="@dimen/text_size_normal_14sp"/>

        <com.acchain.community.view.RandomCodeTextView
            android:id="@+id/rctv_photo_email_code"
            style="@style/TextViewStandard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/view_padding_margin_16dp"
            android:textColor="@color/white_no_selected_40"
            android:textSize="@dimen/text_size_title_15sp"/>
    </LinearLayout>

    <!--登录密码-->
    <EditText
        android:id="@+id/et_password_one"
        style="@style/TextViewStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:background="@color/white_background_5"
        android:hint="@string/activity_register_hint_password_one"
        android:inputType="textPassword"
        android:textColorHint="@color/white_text_alpha_20"
        android:textSize="14sp"/>

    <com.acchain.community.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1px"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"/>

    <EditText
        android:id="@+id/et_password_two"
        style="@style/TextViewStandard"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:hint="@string/activity_register_hint_password_two"
        android:textColorHint="@color/white_text_alpha_20"
        android:textSize="14sp"/>

    <!---->
    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_padding_margin_48dp"
        android:background="@drawable/btn_bg"
        android:text="@string/activity_register_register"
        android:textSize="@dimen/text_size_17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_24dp"
        android:paddingEnd="@dimen/view_padding_margin_32dp"
        android:paddingStart="@dimen/view_padding_margin_32dp"
        android:text="@string/activity_register_label_register"
        android:textColor="@color/white_text_alpha_60"
        android:textSize="@dimen/text_size_normal_14sp"/>
</LinearLayout>