<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="662px"
            android:scaleType="fitXY"
            tools:src="@drawable/test_goods_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0Dffffff"
            android:orientation="vertical"
            android:paddingLeft="28px"
            android:paddingRight="28px"
            android:paddingTop="28px">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_share_blue"
                tools:text="长白山野山参"
                android:textColor="#3f7efd"
                android:textSize="32px" />

            <TextView
                android:id="@+id/describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="集长白之精华，采天地之灵气"
                android:textColor="#99ffffff"
                android:textSize="28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限时价"
                    android:textColor="#ffffff"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    tools:text="￥299"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:text="发行量"
                    android:textColor="#66ffffff"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/circulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    tools:text="10000000"
                    android:textColor="#66ffffff"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:text="已售"
                    android:textColor="#66ffffff"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/sold_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    tools:text="10086"
                    android:textColor="#66ffffff"
                    android:textSize="24px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="30px"
                android:background="@color/divider_26" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_news"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_new"
                    android:drawablePadding="12px"
                    android:gravity="center_vertical"
                    android:text="新闻"
                    android:textColor="@color/white_cc"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_video_monitor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_chakanshipin"
                    android:drawablePadding="12px"
                    android:gravity="center_vertical"
                    android:text="视频监控"
                    android:textColor="@color/white_cc"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_pre_sell_record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_record_clock"
                    android:drawablePadding="12px"
                    android:gravity="center_vertical"
                    android:text="预购记录"
                    android:textColor="@color/white_cc"
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/white_0d">

            <TextView
                android:id="@+id/tv_choose_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more"
                android:gravity="center_vertical"
                android:padding="28px"
                android:text="@string/have_choose"
                android:textColor="#99ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="138px"
                tools:text="357g/盒"
                android:textColor="@color/white_selected_1"
                android:textSize="30px" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/cb_agreement"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginLeft="28px"
            android:button="@null"
            android:background="@null"
            android:drawablePadding="12px"
            android:drawableLeft="@drawable/cb_agreement_bg"
            android:text="同意《华茶一号服务协议》" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_0d"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24px"
                android:paddingTop="36px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行权开始时间"
                    android:textColor="@color/white_cc"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    tools:text="2017-09-14 00:00:00"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:background="@color/divider_26" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24px"
                android:paddingTop="36px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行权结束时间"
                    android:textColor="@color/white_cc"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    tools:text="2017-09-14 00:00:00"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
