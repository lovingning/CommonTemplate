<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <!--登录密码,交易密码-->
    <com.acchain.community.view.LineMenuView
        android:id="@+id/lmv_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:background="@color/white_background_5"
        app:LineMenuView_brief="@string/activity_safety_protection_login_brief"
        app:LineMenuView_menu="@string/activity_safety_protection_login_password"
        app:LineMenuView_brief_text_color="@color/white_text_alpha_60"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
        app:LineMenuView_plugin="text"/>
    <com.acchain.community.view.DividerView
        android:layout_width="match_parent"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1px"/>
    <com.acchain.community.view.LineMenuView
        android:id="@+id/lmv_transaction_password"
        android:background="@color/white_background_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        tools:LineMenuView_brief="设置"
        app:LineMenuView_menu="@string/activity_safety_protection_transaction_password"
        app:LineMenuView_brief_text_color="@color/white_text_alpha_60"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
        app:LineMenuView_plugin="text"/>

    <TextView
        android:visibility="gone"
        style="@style/TextViewStandard"
        android:text="@string/activity_safety_protection_label"
        android:textColor="@color/white_no_selected_40"
        android:textSize="@dimen/text_size_13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--手势,指纹,刷脸-->
    <com.acchain.community.view.LineMenuView
        android:visibility="gone"
        android:id="@+id/lmv_gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        tools:LineMenuView_brief=""
        app:LineMenuView_menu="@string/activity_safety_protection_gesture"
        app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
        app:LineMenuView_plugin="text"/>
    <com.acchain.community.view.DividerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1px"/>
    <com.acchain.community.view.LineMenuView
        android:visibility="gone"
        android:id="@+id/lmv_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:background="@color/white_background_5"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        tools:LineMenuView_brief=""
        app:LineMenuView_menu="@string/activity_safety_protection_fingerprint"
        app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
        app:LineMenuView_plugin="text"/>
    <com.acchain.community.view.DividerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1px"/>
    <com.acchain.community.view.LineMenuView
        android:id="@+id/lmv_face_swiping"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:background="@color/white_background_5"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        tools:LineMenuView_brief=""
        app:LineMenuView_menu="@string/activity_safety_protection_face_swiping"
        app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
        app:LineMenuView_plugin="text"/>
</LinearLayout>