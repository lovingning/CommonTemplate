<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center_vertical"
    android:minHeight="@dimen/prefer_view_height_48dp"
    android:paddingLeft="@dimen/view_padding_margin_16dp"
    android:paddingRight="@dimen/view_padding_margin_16dp">

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/view_padding_margin_16dp"
        android:gravity="start|center_vertical"
        android:paddingBottom="@dimen/view_padding_margin_8dp"
        android:paddingTop="@dimen/view_padding_margin_8dp"
        android:text="对应的菜单信息"
        android:textColor="@color/text_black"/>

    <EditText
        android:background="@color/white_selected_1"
        android:id="@+id/et_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:maxLines="1"/>
</LinearLayout>
