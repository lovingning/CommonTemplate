<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/view_padding_margin_16dp"
    android:background="@color/white_background_5"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="@dimen/text_size_title_15sp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="风清扬"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="0dp"
        android:textSize="@dimen/text_size_title_15sp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        android:text="135****1769"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        android:textSize="@dimen/text_size_title_15sp"
        app:layout_constraintEnd_toEndOf="@id/tv_phone"
        android:layout_width="0dp"
        android:text="广东省深圳市南山区工业八路89号职员吱吱吱吱吱大厦B座F16....."
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_height="wrap_content"/>

    <com.acchain.community.view.DividerView
        android:layout_width="match_parent"
        android:id="@+id/divider"
        android:layout_marginLeft="@dimen/view_padding_margin_16dp"
        android:layout_marginRight="@dimen/view_padding_margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1px"/>

    <ImageView
        android:src="@drawable/icon_address_not_default"
        app:layout_constraintStart_toStartOf="@id/divider"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_width="wrap_content"
        android:checked="false"
        android:layout_marginBottom="@dimen/view_padding_margin_16dp"
        android:id="@+id/iv_default"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

    <!--选中时为4076FE,未选中为99FFFFFF-->
    <TextView
        android:id="@+id/tv_default"
        android:textSize="@dimen/text_size_title_15sp"
        android:layout_marginStart="@dimen/view_padding_margin_4dp"
        app:layout_constraintTop_toTopOf="@id/iv_default"
        app:layout_constraintBottom_toBottomOf="@id/iv_default"
        app:layout_constraintStart_toEndOf="@id/iv_default"
        android:text="@string/item_change_delivery_address_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintEnd_toEndOf="@id/divider"
        android:textColor="@color/white_text_alpha_60"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_default"
        android:text="@string/item_change_delivery_address_delete"
        android:textSize="@dimen/text_size_title_15sp"
        android:id="@+id/tv_delete"
        android:drawablePadding="@dimen/view_padding_margin_4dp"
        android:drawableStart="@drawable/icon_delete_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_edit"
        android:textColor="@color/white_text_alpha_60"
        app:layout_constraintEnd_toStartOf="@id/tv_delete"
        android:textSize="@dimen/text_size_title_15sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_delete"
        android:text="@string/item_change_delivery_address_edit"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:drawablePadding="@dimen/view_padding_margin_4dp"
        android:drawableStart="@drawable/icon_edit_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>

