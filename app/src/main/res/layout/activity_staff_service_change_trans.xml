<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white_background_5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_padding_margin_16dp"
            android:layout_marginStart="@dimen/view_padding_margin_16dp"
            android:layout_marginTop="@dimen/view_padding_margin_16dp"
            android:text="@string/activity_staff_service_change_trans_label_info"
            android:textSize="@dimen/text_size_title_15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--中间线-->
        <ImageView
            android:layout_marginTop="@dimen/view_padding_margin_4dp"
            android:layout_marginBottom="@dimen/view_padding_margin_4dp"
            app:layout_constraintTop_toTopOf="@id/cb_verity"
            app:layout_constraintBottom_toBottomOf="@id/cb_success"
            android:layout_width="@dimen/view_height_4dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/cb_verity"
            app:layout_constraintEnd_toEndOf="@id/cb_verity"
            android:src="@color/gray_color_33e2e2e2"/>

        <CheckBox
            android:id="@+id/cb_verity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_padding_margin_20dp"
            android:layout_marginTop="@dimen/view_padding_margin_20dp"
            android:button="@drawable/selector_check_box_step"
            app:layout_constraintStart_toStartOf="@id/label_info"
            app:layout_constraintTop_toBottomOf="@id/label_info"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/cb_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_42dp"
            android:button="@drawable/selector_check_box_step"
            app:layout_constraintEnd_toEndOf="@id/cb_verity"
            app:layout_constraintStart_toStartOf="@id/cb_verity"
            app:layout_constraintTop_toBottomOf="@id/cb_verity"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/cb_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_42dp"
            android:button="@drawable/selector_check_box_step"
            app:layout_constraintEnd_toEndOf="@id/cb_upload"
            app:layout_constraintStart_toStartOf="@id/cb_upload"
            app:layout_constraintTop_toBottomOf="@id/cb_upload"
            tools:checked="false"/>

        <!--文字信息-->
        <TextView
            android:id="@+id/label_step1"
            app:layout_constraintTop_toTopOf="@id/cb_verity"
            app:layout_constraintBottom_toBottomOf="@id/cb_verity"
            android:layout_marginStart="@dimen/view_padding_margin_8dp"
            app:layout_constraintStart_toEndOf="@id/cb_verity"
            android:textSize="@dimen/text_size_normal_14sp"
            android:text="@string/activity_staff_service_change_trans_label_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/view_padding_margin_4dp"
            app:layout_constraintStart_toStartOf="@id/label_step1"
            app:layout_constraintTop_toBottomOf="@id/label_step1"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/white_no_selected_40"
            android:text="@string/activity_staff_service_change_trans_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--文字信息-->
        <TextView
            android:id="@+id/label_step2"
            app:layout_constraintTop_toTopOf="@id/cb_upload"
            app:layout_constraintBottom_toBottomOf="@id/cb_upload"
            android:layout_marginStart="@dimen/view_padding_margin_8dp"
            app:layout_constraintStart_toEndOf="@id/cb_upload"
            android:textSize="@dimen/text_size_normal_14sp"
            android:text="@string/activity_staff_service_change_trans_label_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/view_padding_margin_4dp"
            app:layout_constraintStart_toStartOf="@id/label_step2"
            app:layout_constraintTop_toBottomOf="@id/label_step2"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/white_no_selected_40"
            android:text="@string/activity_staff_service_change_trans_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--文字信息-->
        <TextView
            android:id="@+id/label_step3"
            app:layout_constraintTop_toTopOf="@id/cb_success"
            app:layout_constraintBottom_toBottomOf="@id/cb_success"
            android:layout_marginStart="@dimen/view_padding_margin_8dp"
            app:layout_constraintStart_toEndOf="@id/cb_success"
            android:textSize="@dimen/text_size_normal_14sp"
            android:text="@string/activity_staff_service_change_trans_label_step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/view_padding_margin_20dp"
            android:layout_marginTop="@dimen/view_padding_margin_4dp"
            app:layout_constraintStart_toStartOf="@id/label_step3"
            app:layout_constraintTop_toBottomOf="@id/label_step3"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/white_no_selected_40"
            android:text="@string/activity_staff_service_change_trans_step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

    <!--按钮-->
    <Button
        android:id="@+id/bt_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/view_padding_margin_48dp"
        android:layout_marginTop="@dimen/view_padding_margin_48dp"
        android:background="@drawable/btn_bg"
        android:text="@string/activity_staff_service_change_trans_apply"
        android:textSize="@dimen/text_size_17sp"/>
</LinearLayout>