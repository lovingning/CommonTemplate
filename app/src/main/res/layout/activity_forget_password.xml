<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <!--手机-->
    <com.acchain.community.view.LineMenuView
        android:id="@+id/lmv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief_text_color="@color/white_text_alpha_60"
        app:LineMenuView_brief_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_icon="@drawable/lmv_phone"
        app:LineMenuView_menu="@string/activity_forget_password_phone"
        app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
        app:LineMenuView_plugin="text"/>

    <com.acchain.community.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"/>

    <!--邮箱-->
    <com.acchain.community.view.LineMenuView
        android:id="@+id/lmv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_background_5"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief_text_color="@color/white_text_alpha_60"
        app:LineMenuView_brief_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_icon="@drawable/lmv_email"
        app:LineMenuView_menu="@string/activity_forget_password_email"
        app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
        app:LineMenuView_plugin="text"/>
</LinearLayout>