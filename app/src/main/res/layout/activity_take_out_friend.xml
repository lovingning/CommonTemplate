<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <!--头像/个人信息-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_padding_margin_20dp"
                android:src="@drawable/icon_currency_head"
                app:riv_border_color="@color/blue_background_transparent_border"
                app:riv_border_width="@dimen/prefer_head_icon_border_width"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_16dp"
                android:gravity="center"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:textSize="@dimen/text_size_title_15sp"
                android:textStyle="bold"
                tools:text="曲非烟"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_8dp"
                android:gravity="center"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:textSize="@dimen/text_size_smallest_11sp"
                tools:text="138****6952"/>

            <!--转账信息-->
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_32dp"
                android:background="@color/white_background_5">

                <TextView
                    android:id="@+id/label_currency"
                    style="@style/TextViewStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="0dp"
                    android:text="@string/activity_take_out_friend_currency"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/view_padding_margin_32dp"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/label_currency"
                    app:layout_constraintStart_toEndOf="@id/label_currency"
                    tools:text="ACC"/>

                <TextView
                    android:id="@+id/et_available"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@color/transparent"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:textSize="@dimen/text_size_title_15sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_currency"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_currency"
                    tools:text="108"/>

                <com.acchain.community.view.DividerView
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1px"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    app:layout_constraintTop_toBottomOf="@id/label_currency"/>

                <TextView
                    android:id="@+id/label_amount"
                    style="@style/TextViewStandard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="0dp"
                    android:text="@string/activity_take_out_friend_amount"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"
                    app:layout_constraintRight_toRightOf="@id/tv_currency"
                    app:layout_constraintStart_toStartOf="@id/label_currency"
                    app:layout_constraintTop_toBottomOf="@id/divider"/>

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/activity_take_out_friend_amount_hint"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/white_text_alpha_20"
                    android:textSize="@dimen/text_size_title_15sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/label_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/label_amount"/>
            </android.support.constraint.ConstraintLayout>

            <!--备注信息-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:text="@string/activity_take_out_friend_remark"
                android:textColor="@color/white_no_selected_40"
                android:textSize="@dimen/text_size_13sp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginTop="@dimen/view_padding_margin_12dp">

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_big"
                    android:lineSpacingMultiplier="1.5"
                    android:maxLength="100"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    tools:text="fjksjfskljfskjkfljsklfjksljfksjk\nfjskd"/>

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/view_padding_margin_24dp"
                    android:paddingStart="@dimen/view_padding_margin_24dp"
                    android:paddingTop="@dimen/view_padding_margin_12dp"
                    android:src="@drawable/icon_edit_gray"/>
            </FrameLayout>

            <!--按钮-->
            <Button
                android:id="@+id/bt_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/view_padding_margin_48dp"
                android:layout_marginTop="@dimen/view_padding_margin_48dp"
                android:background="@drawable/btn_bg"
                android:text="@string/activity_take_out_friend_confirm"
                android:textSize="@dimen/text_size_17sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>