<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- banner 此部分在滑动后会折叠,margin是针对CollapsingToolbarLayout
                 通过marginTop和marginBottom来定自己的位置
            -->
            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginBottom="95dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/icon_scan"
                android:gravity="top"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">


                <TextView
                    android:id="@+id/search"
                    style="@style/text_12_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_search"
                    android:drawablePadding="@dimen/text_size_small_12sp"
                    android:paddingBottom="@dimen/view_padding_margin_8dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingTop="@dimen/view_padding_margin_8dp"
                    android:text="@string/search_good" />
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/pic_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_panic"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/icon_qianggou"
                    android:gravity="center_horizontal"
                    android:text="@string/panic_buying" />

                <TextView
                    android:id="@+id/tv_pre_sell"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/icon_yushou"
                    android:gravity="center_horizontal"
                    android:text="@string/pre_order" />

                <TextView
                    android:id="@+id/tv_adopt"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/icon_lingyang"
                    android:gravity="center_horizontal"
                    android:text="@string/adopt" />

                <TextView
                    android:id="@+id/tv_exercise"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/icon_xingquan"
                    android:gravity="center_horizontal"
                    android:text="@string/exercise" />

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <!--信息展示区域-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="12px"
                android:background="@color/white_0d"
                />
            <RelativeLayout
                android:id="@+id/rl_panic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/xianshiqianggou">

                    <com.acchain.community.view.TimeView
                        android:id="@+id/time_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_padding_margin_16dp"
                    android:src="@drawable/right" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/panic_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="9dp"
                />

            <RelativeLayout
                android:id="@+id/rl_pre_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="28dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/yushou" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_padding_margin_16dp"
                    android:src="@drawable/right" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pre_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/prefer_view_height_48dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                />

            <RelativeLayout
                android:id="@+id/rl_adopt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/aixinlingyang" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_eyu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tuijianxingquan" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_padding_margin_16dp"
                    android:src="@drawable/right" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/exercise_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/prefer_view_height_48dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_behavior=".behavior.BannerHideBehavior" />
</android.support.design.widget.CoordinatorLayout>