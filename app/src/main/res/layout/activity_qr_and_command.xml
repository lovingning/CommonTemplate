<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!---->
    <include layout="@layout/layout_top_bar"/>

    <!---->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_48dp"
            android:layout_marginBottom="@dimen/view_padding_margin_24dp"
            app:cardBackgroundColor="@color/white_selected_1"
            app:cardCornerRadius="@dimen/drawable_shape_normal_radius_5dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/view_padding_margin_24dp">
                <!--头像-->
                <ImageView
                    android:id="@+id/iv_icon"
                    style="@style/ImageViewStandard"
                    android:layout_width="@dimen/view_height_50dp"
                    android:layout_height="@dimen/view_height_50dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_16dp"
                    android:src="@drawable/icon_head_big"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!---->
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:textColor="@color/black_text_333_1"
                    android:textSize="@dimen/text_size_17sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_icon"
                    app:layout_constraintTop_toTopOf="@id/iv_icon"
                    tools:text="Shirmy"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/view_padding_margin_12dp"
                    android:src="@drawable/icon_head_blue_small"
                    app:layout_constraintBottom_toBottomOf="@id/tv_name"
                    app:layout_constraintLeft_toRightOf="@id/tv_name"
                    app:layout_constraintTop_toTopOf="@id/tv_name"/>

                <TextView
                    android:id="@+id/tv_duty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                    android:textColor="@color/black_text_333_1"
                    android:textSize="@dimen/text_size_normal_14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_name"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="产品经理"/>

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                    android:textColor="@color/black_text_999_1"
                    android:textSize="@dimen/text_size_normal_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_icon"
                    app:layout_constraintLeft_toLeftOf="@id/tv_name"
                    tools:text="深圳威特区块链科技有限公司"/>

                <ImageView
                    android:id="@+id/iv_qr"
                    android:layout_width="@dimen/view_height_250dp"
                    android:layout_height="@dimen/view_height_250dp"
                    android:layout_marginTop="@dimen/view_padding_margin_32dp"
                    android:src="@drawable/icon_qr_big"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_icon"/>

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_32dp"
                    android:gravity="center"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:textColor="@color/black_text_666_1"
                    android:textSize="@dimen/text_size_normal_14sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_qr"
                    android:text="用微脉扫描二维码,添加我为好友"/>

                <LinearLayout
                    android:id="@+id/ll_create_command"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_20dp"
                    android:background="@drawable/shape_transparent_border_blue_radius_5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/tv_label">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:drawablePadding="@dimen/view_padding_margin_8dp"
                        android:drawableStart="@drawable/icon_chiave_blue"
                        android:gravity="center"
                        android:text="@string/activity_qr_and_command_label_command"
                        android:textColor="@color/black_text_333_1"
                        android:textSize="@dimen/text_size_normal_14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_padding_margin_12dp"
                        android:layout_marginTop="@dimen/view_padding_margin_8dp"
                        android:text="@string/activity_qr_and_command_label_send"
                        android:textColor="@color/black_text_999_1"
                        android:textSize="@dimen/text_size_13sp"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>