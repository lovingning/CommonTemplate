<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/layout_top_bar" />
    <TextView
        android:layout_width="wrap_content"
        android:text="你需要发送验证申请,等待对方通过"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        android:textColor="@color/white_99"
        android:layout_marginLeft="@dimen/view_padding_margin_16dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_normal_14sp"
        android:text=""
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        android:background="@color/white_0d"
        android:paddingLeft="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/item_height_default" />
</LinearLayout>