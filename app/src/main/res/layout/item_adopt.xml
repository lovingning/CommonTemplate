<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16px"
    android:layout_marginRight="16px"
    android:layout_marginTop="12px"
    android:background="@drawable/bg_lingynag"
    android:orientation="vertical"
    android:paddingLeft="40px"
    android:paddingTop="80px"
    >

    <TextView
        android:id="@+id/adopt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红豆杉 第1期"
        android:textColor="@color/blue_3f"
        android:textSize="30px" />

    <com.acchain.community.view.NumberProgressView
        android:id="@+id/number_progress"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="40px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="199元/株"
                        android:textColor="@color/yellow"
                        android:textSize="34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px"
                        android:text="领养价格"
                        android:textColor="@color/white_99"
                        android:textSize="22px" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/white_4d" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12个月"
                        android:textColor="@color/yellow"
                        android:textSize="34px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px"
                        android:text="领养期限"
                        android:textColor="@color/white_99"
                        android:textSize="22px" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="20px"
                android:background="@drawable/xian_right" />

            <TextView
                android:id="@+id/adopt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="108人已领养"
                android:textColor="@color/white_99"
                android:textSize="22px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_adopt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="60px"
            android:src="@drawable/btn_lingyang" />

    </LinearLayout>

</LinearLayout>