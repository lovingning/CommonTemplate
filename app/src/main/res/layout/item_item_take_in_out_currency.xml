<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background_take_in_out_currency">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/view_padding_margin_8dp"
            android:layout_marginStart="@dimen/view_padding_margin_8dp"
            android:layout_marginTop="@dimen/view_padding_margin_8dp"
            android:src="@drawable/icon_head_nothing"/>

        <TextView
            android:id="@+id/tv_currency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/view_padding_margin_4dp"
            android:text="雪山古树"
            android:textColor="@color/blue_label_title_selected_pressed_markedness"
            android:textSize="@dimen/text_size_small_12sp"/>

        <TextView
            android:id="@+id/tv_currency_abbreviation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/view_padding_margin_4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="(XSGS)"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/view_padding_margin_12dp"
            android:src="@drawable/icon_arrow_right"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:src="@drawable/item_take_in_out_currency_selected"
        android:visibility="invisible"
        tools:visibility="visible"/>
</FrameLayout>