<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar"/>

    <!--搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_padding_margin_12dp"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:gravity="center"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/fl_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="@dimen/view_padding_margin_8dp"
                android:gravity="center"
                android:padding="@dimen/view_padding_margin_8dp"
                android:text="@string/activity_take_out_currency_search"
                android:textColor="@color/blue_text_color"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        style="@style/TextViewStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:text="@string/activity_take_out_currency_label"
        android:textSize="@dimen/text_size_title_15sp"/>

    <!--列表组-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.acchain.community.view.DisableChildGridView
            android:id="@+id/gv_currency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="@dimen/view_padding_margin_16dp"
            android:numColumns="2"
            android:paddingLeft="@dimen/view_padding_margin_16dp"
            android:paddingRight="@dimen/view_padding_margin_16dp"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/view_padding_margin_8dp"/>

        <!--空视图-->
        <com.acchain.community.view.RecyclerEmptyView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!--功能栏-->
    <LinearLayout
        android:id="@+id/linear_transOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingStart="0dp">

        <TextView
            android:id="@+id/tv_friends"
            style="@style/TextViewStandard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_background_7d"
            android:gravity="center"
            android:text="转给朋友"
            android:textSize="@dimen/text_size_title_15sp"/>

        <TextView
            android:id="@+id/tv_platform"
            style="@style/TextViewStandard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_background_49"
            android:gravity="center"
            android:text="转出平台"
            android:textSize="@dimen/text_size_title_15sp"/>
    </LinearLayout>
</LinearLayout>