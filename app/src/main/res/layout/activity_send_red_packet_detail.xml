<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rela_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="open_redPacket"
        android:background="@drawable/red_detail_bg"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_head_img" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/headImg"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title_15sp"
            android:text="谁的红包" />
        <TextView
            android:id="@+id/red_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:textColor="@color/white_8E"
            android:textSize="@dimen/text_size_small_12sp"
            android:text="恭喜发财 万事如意" />
        <com.acchain.community.view.DividerView
            android:id="@+id/line"
            android:layout_below="@id/red_title"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/view_padding_margin_16dp"
            android:layout_height="@dimen/divider_line_width_1px" />
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/view_padding_margin_16dp"
            android:text="" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear_recever"
        android:visibility="gone"
        android:layout_below="@+id/rela_head"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/view_padding_margin_8dp"
        android:paddingBottom="@dimen/view_padding_margin_8dp"
        android:paddingLeft="@dimen/view_padding_margin_16dp"
        android:paddingRight="@dimen/view_padding_margin_16dp"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/recever_HeadImg"
            android:layout_width="@dimen/view_height_50dp"
            app:riv_corner_radius="5dp"
            android:src="@drawable/default_head_img"
            android:layout_height="@dimen/view_height_50dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/view_padding_margin_8dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recever_nikeName"
                android:layout_width="wrap_content"
                android:text="昵称"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/recever_Time"
                android:layout_width="wrap_content"
                android:text="2018"
                android:layout_marginTop="@dimen/drawable_shape_normal_radius_3dp"
                android:textColor="@color/white_99"
                android:textSize="@dimen/text_size_small_12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/recever_Amount"
            android:layout_width="wrap_content"
            android:text="100"
            android:textSize="@dimen/text_size_title_15sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/yellow_text_color_ff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/recever_Currency"
            android:layout_width="wrap_content"
            android:text="ACC"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/text_size_title_15sp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:navigationIcon="@drawable/icon_back" />

        <!--添加一条分割线-->
        <com.acchain.community.view.DividerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_width_1px" />
    </LinearLayout>
    <TextView
        android:id="@+id/my_red_packet_record"
        android:layout_above="@+id/bottom_info"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/my_red_packet_record"
        android:layout_marginBottom="@dimen/view_padding_margin_16dp"
        android:textColor="@color/blue_text_color"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bottom_info"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/_24"
        android:textColor="@color/white_99"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_padding_margin_48dp"
        android:layout_height="wrap_content" />
</RelativeLayout>