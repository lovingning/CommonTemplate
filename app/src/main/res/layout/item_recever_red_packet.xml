<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rela_head"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/view_padding_margin_8dp"
    android:paddingLeft="@dimen/view_padding_margin_16dp"
    android:paddingRight="@dimen/view_padding_margin_16dp"
    android:paddingTop="@dimen/view_padding_margin_8dp"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recever_HeadImg"
        app:riv_corner_radius="5dp"
        android:layout_width="@dimen/view_height_50dp"
        android:layout_height="@dimen/view_height_50dp"
        android:src="@drawable/default_head_img" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/view_padding_margin_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recever_nikeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/recever_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawable_shape_normal_radius_3dp"
            android:text="2018"
            android:textColor="@color/white_99"
            android:textSize="@dimen/text_size_small_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/recever_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="100"
        android:textColor="@color/yellow_text_color_ff"
        android:textSize="@dimen/text_size_title_15sp" />

    <TextView
        android:id="@+id/recever_Currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:text="ACC"
        android:textSize="@dimen/text_size_title_15sp" />
</LinearLayout>