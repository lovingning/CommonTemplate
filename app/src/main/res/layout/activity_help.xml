<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <!--可滑动部分:问题列表-->
    <ScrollView
        android:id="@+id/sv_content"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--问题搜索-->
            <ImageView
                android:src="@drawable/background_help_question"
                android:id="@+id/iv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--账户问题-->
            <com.acchain.community.view.LineMenuView
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_menu="@string/activity_help_lmv_0"
                app:LineMenuView_plugin="text"
                app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_brief_text_color="@color/blue_text_2e59cd"
                app:LineMenuView_brief_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_brief="@string/activity_help_more"
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.acchain.community.view.DividerView
                android:layout_width="match_parent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:background="@color/white_background_5"
                android:layout_height="@dimen/divider_line_width_1px"/>
            <com.acchain.community.view.LineMenuView
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_menu="@string/activity_help_lmv_1"
                app:LineMenuView_plugin="text"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_menu_text_color="@color/white_text_alpha_80"
                app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
                app:LineMenuView_brief=""
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.acchain.community.view.DividerView
                android:layout_width="match_parent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:background="@color/white_background_5"
                android:layout_height="@dimen/divider_line_width_1px"/>
            <com.acchain.community.view.LineMenuView
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_menu="@string/activity_help_lmv_2"
                app:LineMenuView_plugin="text"
                app:LineMenuView_menu_text_color="@color/white_text_alpha_80"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
                app:LineMenuView_brief=""
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.acchain.community.view.DividerView
                android:layout_width="match_parent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:background="@color/white_background_5"
                android:layout_height="@dimen/divider_line_width_1px"/>
            <com.acchain.community.view.LineMenuView
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_menu_text_color="@color/white_text_alpha_80"
                app:LineMenuView_menu="@string/activity_help_lmv_3"
                app:LineMenuView_plugin="text"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
                app:LineMenuView_brief=""
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--关于区块链商城-->
            <com.acchain.community.view.LineMenuView
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_menu="@string/activity_help_lmv_4"
                app:LineMenuView_plugin="text"
                app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_brief_text_color="@color/blue_text_2e59cd"
                app:LineMenuView_brief_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_brief="@string/activity_help_more"
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.acchain.community.view.DividerView
                android:layout_width="match_parent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:background="@color/white_background_5"
                android:layout_height="@dimen/divider_line_width_1px"/>
            <com.acchain.community.view.LineMenuView
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_menu="@string/activity_help_lmv_5"
                app:LineMenuView_plugin="text"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_menu_text_color="@color/white_text_alpha_80"
                app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
                app:LineMenuView_brief=""
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.acchain.community.view.DividerView
                android:layout_width="match_parent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:background="@color/white_background_5"
                android:layout_height="@dimen/divider_line_width_1px"/>
            <com.acchain.community.view.LineMenuView
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_menu="@string/activity_help_more_lmv_6"
                app:LineMenuView_plugin="text"
                app:LineMenuView_menu_text_color="@color/white_text_alpha_80"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_navigation="@drawable/icon_arrow_right_gray"
                app:LineMenuView_brief=""
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <!--底部菜单栏-->
    <LinearLayout
        style="@style/TextViewStandard"
        android:paddingTop="@dimen/view_padding_margin_8dp"
        android:paddingBottom="@dimen/view_padding_margin_8dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_question"
            android:drawablePadding="@dimen/view_padding_margin_4dp"
            android:drawableTop="@drawable/icon_changjianwenti"
            android:gravity="center"
            android:text="@string/activity_help_more_question"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_chat"
            android:drawablePadding="@dimen/view_padding_margin_4dp"
            android:drawableTop="@drawable/icon_tiwen"
            android:gravity="center"
            android:text="@string/activity_help_more_chat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_feedback"
            android:drawablePadding="@dimen/view_padding_margin_4dp"
            android:drawableTop="@drawable/icon_yijianfankui"
            android:gravity="center"
            android:text="@string/activity_help_more_feedback"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>