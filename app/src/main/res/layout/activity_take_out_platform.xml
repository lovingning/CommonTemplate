<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/layout_top_bar"/>

    <!--内容-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--资产数量-->
            <LinearLayout
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_background_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_take_out_platform_have"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"/>

                <TextView
                    android:id="@+id/tv_currency_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACC"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"/>

                <TextView
                    android:id="@+id/tv_currency_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_padding_margin_32dp"
                    android:textSize="@dimen/text_size_title_15sp"
                    android:textStyle="bold"
                    tools:text="108"/>
            </LinearLayout>

            <!--地址label-->
            <TextView
                style="@style/TextViewStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/view_height_40dp"
                android:text="@string/activity_take_out_platform_address_label"
                android:textColor="@color/white_no_selected_40"
                android:textSize="@dimen/text_size_13sp"/>

            <!--地址输入-->
            <LinearLayout
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_background_5"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical|start"
                    android:hint="@string/activity_take_out_platform_address_hint"
                    android:textColorHint="@color/white_text_alpha_20"
                    android:textSize="@dimen/text_size_title_15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:minHeight="@dimen/view_padding_margin_20dp"
                    android:src="@drawable/divider_line_blue_vertical"/>

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_scan"/>
            </LinearLayout>

            <com.acchain.community.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1px"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:background="@color/white_background_5"
                android:paddingStart="@dimen/view_padding_margin_16dp"/>

            <!--转出数量-->
            <LinearLayout
                style="@style/TextViewStandard"
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_take_out_platform_amount"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"/>

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/activity_take_out_platform_amount_hint"
                    android:paddingLeft="@dimen/view_padding_margin_32dp"
                    android:paddingRight="@dimen/view_padding_margin_16dp"
                    android:textColorHint="@color/white_text_alpha_20"
                    android:textSize="@dimen/text_size_title_15sp"/>
            </LinearLayout>

            <com.acchain.community.view.DividerView
                android:layout_width="match_parent"
                android:background="@color/white_background_5"
                android:layout_height="@dimen/divider_line_width_1px"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:paddingStart="@dimen/view_padding_margin_16dp"/>

            <!--交易密码-->
            <LinearLayout
                style="@style/TextViewStandard"
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_take_out_platform_password"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/activity_take_out_platform_password_hint"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:paddingStart="@dimen/view_padding_margin_32dp"
                    android:textColorHint="@color/white_text_alpha_20"
                    android:textSize="@dimen/text_size_title_15sp"/>
            </LinearLayout>

            <!--功能按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/view_padding_margin_16dp"
                android:paddingTop="@dimen/view_padding_margin_16dp">

                <com.acchain.community.view.RandomCodeTextView
                    android:id="@+id/tv_message_code"
                    style="@style/TextViewStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_transparent_border_blue_radius_5dp"
                    android:minHeight="0dp"
                    android:text="@string/activity_take_out_platform_message_code"
                    android:textSize="@dimen/text_size_small_12sp"/>

                <com.acchain.community.view.RandomCodeTextView
                    android:id="@+id/tv_voice_code"
                    style="@style/TextViewStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_padding_margin_20dp"
                    android:background="@drawable/shape_transparent_border_blue_radius_5dp"
                    android:minHeight="0dp"
                    android:text="@string/activity_take_out_platform_voice_code"
                    android:textSize="@dimen/text_size_small_12sp"/>
            </LinearLayout>

            <!--验证码-->
            <LinearLayout
                style="@style/TextViewStandard"
                android:background="@color/white_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_take_out_platform_code_label"
                    android:textColor="@color/white_text_alpha_80"
                    android:textSize="@dimen/text_size_title_15sp"/>

                <EditText
                    android:id="@+id/et_verify_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/activity_take_out_platform_code_hint"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:paddingStart="@dimen/view_padding_margin_32dp"
                    android:textColorHint="@color/white_text_alpha_20"
                    android:textSize="@dimen/text_size_title_15sp"/>
            </LinearLayout>

            <!--转出按钮-->
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/bt_take_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_20dp"
                android:background="@drawable/btn_bg"
                android:text="@string/activity_take_out_platform_confirm"
                android:textSize="@dimen/text_size_17sp"/>

            <!--声明信息-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_20dp"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:text="@string/activity_take_out_platform_declare_label"
                android:textColor="@color/white_no_selected_40"
                android:textSize="@dimen/text_size_small_12sp"/>

            <TextView
                android:layout_marginBottom="@dimen/view_padding_margin_16dp"
                android:id="@+id/tv_info"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/activity_take_out_platform_info"
                android:textColor="@color/white_text_alpha_60"
                android:textSize="@dimen/text_size_small_12sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>